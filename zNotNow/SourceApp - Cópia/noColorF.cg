struct output 
{
	float4 color : COLOR;
};

output main(float2 texCoord : TEXCOORD0, uniform float4 colorRemove, uniform sampler2D decal)
{
	output OUT;

	OUT.color    = tex2D(decal, texCoord);
	if(OUT.color.x == colorRemove.x && OUT.color.y == colorRemove.y && OUT.color.z == colorRemove.z)
		OUT.color.w = 0;

	return OUT;

}